{
  "name": "factory-game-planner",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "parcel serve ./src/index.html --dist-dir .parcel-dev --public-url / --port 3000",
    "import": "ts-node-esm --experimental-specifier-resolution=node scripts/importer.ts",
    "peggify": "peggy --format es -o src/math/ExpressionParser.js src/math/expression.peggy",
    "test": "node --experimental-loader ts-node/esm --test src/math/BigRat.test.ts src/math/Expression.test.ts",
    "prettier": "prettier --write src/**/*.ts src/**/*.tsx src/**/*.css"
  },
  "devDependencies": {
    "@types/mustache": "^4.2.2",
    "@types/node": "^18.11.13",
    "fp-ts": "^2.13.1",
    "io-ts": "^2.2.20",
    "mustache": "^4.2.0",
    "parcel": "^2.8.1",
    "peggy": "^2.0.1",
    "prettier": "2.8.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "immer": "^9.0.16",
    "modern-normalize": "^1.1.0",
    "preact": "^10.11.3"
  },
  "browserslist": {
    "production": [
      "last 3 chrome version",
      "last 2 firefox version",
      "last 1 safari version",
      "firefox esr"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "alias": {
	"preact/jsx-dev-runtime": "preact/jsx-runtime"
  },
  "@parcel/transformer-css": {
    "drafts": {
      "nesting": true
    }
  }
}
